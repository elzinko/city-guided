{
  "compilerOptions": {
    "lib": ["ES2019"],
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "../dist-tests",
    "types": ["node"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false
  },
  "include": ["e2e/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
