events {
    worker_connections 1024;
}

http {
    # Upstream servers
    upstream frontend {
        server frontend:3000;
    }

    upstream api {
        server api:3001;
    }

    # HTTP server - redirect to HTTPS (optionnel, pour Let's Encrypt)
    server {
        listen 80;
        server_name city-guided-staging.duckdns.org;

        # Allow ACME challenge for Let's Encrypt
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }

        # Redirect all other traffic to HTTPS
        location / {
            return 301 https://$host$request_uri;
        }
    }

    # HTTPS server (si certificat SSL disponible)
    server {
        listen 443 ssl http2;
        server_name city-guided-staging.duckdns.org;

        # SSL configuration (à activer une fois Let's Encrypt configuré)
        # ssl_certificate /etc/letsencrypt/live/city-guided-staging.duckdns.org/fullchain.pem;
        # ssl_certificate_key /etc/letsencrypt/live/city-guided-staging.duckdns.org/privkey.pem;

        # Proxy to API
        location /api {
            proxy_pass http://api;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
        }

        # Proxy to Frontend
        location / {
            proxy_pass http://frontend;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
        }
    }
}
