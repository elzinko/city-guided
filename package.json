{
  "name": "city-guided",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "bootstrap": "corepack enable && corepack prepare pnpm@8.8.0 --activate && pnpm install",
    "install:quiet": "pnpm install --reporter=append-only 2>&1 | grep -vE '(WARN.*deprecated|WARN.*Ignored build scripts|deprecated subdependencies)' || pnpm install --reporter=append-only",
    "dev": "bash scripts/dev-start.sh",
    "dev:stop": "bash scripts/dev-stop.sh",
    "dev:e2e": "bash scripts/dev-e2e.sh",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:e2e": "pnpm --filter apps-web-frontend test:e2e",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "type-check": "turbo run type-check",
    "prepare": "husky install",
    "docker:setup": "bash infra/deployment/scripts/setup.sh",
    "docker:start": "bash infra/deployment/scripts/start.sh",
    "docker:stop": "bash infra/deployment/scripts/stop.sh",
    "docker:logs": "bash infra/deployment/scripts/logs.sh",
    "docker:status": "bash infra/deployment/scripts/status.sh",
    "docker:wait": "bash infra/deployment/scripts/wait.sh",
    "docker:build": "bash infra/deployment/scripts/build.sh",
    "docker:deploy": "bash infra/deployment/scripts/deploy.sh",
    "docker:clean": "bash infra/deployment/scripts/clean.sh",
    "docker:network": "bash infra/docker/scripts/network.sh",
    "docker:osrm:volume": "bash infra/docker/scripts/data.sh",
    "infra:provision": "cd infra/provisioning/aws && pnpm run provision",
    "infra:provision:verify": "cd infra/provisioning/aws && pnpm run provision:verify",
    "infra:destroy": "cd infra/provisioning/aws && pnpm run destroy",
    "infra:status": "cd infra/provisioning/aws && pnpm run status",
    "infra:logs": "cd infra/provisioning/aws && pnpm run logs",
    "infra:logs:api": "cd infra/provisioning/aws && pnpm run logs:api",
    "infra:logs:web": "cd infra/provisioning/aws && pnpm run logs:web",
    "infra:logs:follow": "cd infra/provisioning/aws && pnpm run logs:follow",
    "infra:logs:api:follow": "cd infra/provisioning/aws && pnpm run logs:api:follow",
    "infra:logs:web:follow": "cd infra/provisioning/aws && pnpm run logs:web:follow",
    "app:deploy": "cd infra/provisioning/aws && pnpm run deploy",
    "app:deploy:verify": "cd infra/provisioning/aws && pnpm run deploy:verify",
    "config:get": "cd infra/provisioning/aws && pnpm run config get",
    "config:push": "cd infra/provisioning/aws && pnpm run config push",
    "config:diff": "cd infra/provisioning/aws && pnpm run config diff",
    "env:check": "cd infra/provisioning/aws && pnpm run env:check",
    "env:export": "cd infra/provisioning/aws && pnpm run env:export",
    "stack:start": "cd infra/provisioning/aws && pnpm run stack:start",
    "stack:stop": "cd infra/provisioning/aws && pnpm run stack:stop",
    "stack:restart": "cd infra/provisioning/aws && pnpm run stack:restart",
    "cleanup:ssm": "cd infra/provisioning/aws && pnpm run cleanup:ssm"
  },
  "devDependencies": {
    "turbo": "^1.8.6",
    "eslint": "^9.39.2",
    "@eslint/js": "^9.0.0",
    "prettier": "^2.8.8",
    "husky": "^8.0.0",
    "typescript": "^5.2.0",
    "@types/node": "^20.0.0",
    "typescript-eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0"
  }
}
