{
  "name": "city-guided",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "bootstrap": "corepack enable && corepack prepare pnpm@8.8.0 --activate && pnpm install",
    "dev": "pnpm -r --parallel --filter apps-web-frontend --filter services-api dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "prepare": "husky install"
  },
  "devDependencies": {
    "turbo": "^1.8.6",
    "eslint": "^8.50.0",
    "prettier": "^2.8.8",
    "husky": "^8.0.0",
    "typescript": "^5.2.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "eslint-config-prettier": "^9.0.0"
  }
}
