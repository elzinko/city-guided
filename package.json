{
  "name": "city-guided",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "bootstrap": "corepack enable && corepack prepare pnpm@8.8.0 --activate && pnpm install",
    "install:quiet": "pnpm install --reporter=append-only 2>&1 | grep -vE '(WARN.*deprecated|WARN.*Ignored build scripts|deprecated subdependencies)' || pnpm install --reporter=append-only",
    "dev": "bash scripts/dev-start.sh",
    "stop": "bash scripts/dev-stop.sh",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:e2e": "pnpm --filter apps-web-frontend test:e2e",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "turbo run type-check",
    "prepare": "husky install",
    "docker:setup": "bash infra/docker/scripts/setup.sh",
    "docker:start": "bash infra/docker/scripts/start.sh",
    "docker:stop": "bash infra/docker/scripts/stop.sh",
    "docker:logs": "bash infra/docker/scripts/logs.sh",
    "docker:wait": "bash infra/docker/scripts/wait.sh",
    "docker:build": "bash infra/docker/scripts/build.sh",
    "docker:deploy": "bash infra/docker/scripts/deploy.sh",
    "docker:clean": "bash infra/docker/scripts/clean.sh",
    "docker:network": "bash infra/docker/scripts/network.sh",
    "docker:osrm:volume": "bash infra/docker/scripts/data.sh",
    "provision": "cd infra/provisioning/aws && pnpm run provision",
    "destroy": "cd infra/provisioning/aws && pnpm run destroy",
    "update-config": "cd infra/provisioning/aws && pnpm run update-config",
    "ssh": "bash infra/scripts/ssh.sh",
    "config:get": "bash infra/scripts/config.sh get",
    "config:push": "bash infra/scripts/config.sh push",
    "config:diff": "bash infra/scripts/config.sh diff",
    "ssh:staging": "pnpm ssh staging",
    "ssh:prod": "pnpm ssh prod",
    "config:get:staging": "pnpm config:get staging",
    "config:get:prod": "pnpm config:get prod",
    "config:push:staging": "pnpm config:push staging",
    "config:push:prod": "pnpm config:push prod",
    "config:diff:staging": "pnpm config:diff staging",
    "config:diff:prod": "pnpm config:diff prod",
    "destroy:staging": "pnpm destroy staging",
    "destroy:prod": "pnpm destroy prod"
  },
  "devDependencies": {
    "turbo": "^1.8.6",
    "eslint": "^8.57.0",
    "prettier": "^2.8.8",
    "husky": "^8.0.0",
    "typescript": "^5.2.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "eslint-config-prettier": "^9.0.0"
  }
}
