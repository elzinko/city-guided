{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@city-guided/*": ["packages/*/src"]
    }
  }
}
